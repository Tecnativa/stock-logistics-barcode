<odoo>
    <record id="view_stock_barcodes_read_form" model="ir.ui.view">
        <field name="name">stock.barcodes.read.form</field>
        <field name="model">wiz.stock.barcodes.read</field>
        <field name="arch" type="xml">
            <form string="Barcodes" class="oe_stock_barcordes_form">
                <sheet>
                    <div
                        name="menu_actions"
                        invisible="not context.get('display_menu', False)"
                    >
                        <field
                            name="action_ids"
                            options="{'no_open': True}"
                            nolabel="1"
                            mode="kanban"
                        >
                            <tree string="Actions">
                                <field name="name" />
                            </tree>
                            <kanban class="o_kanban_mobile o_kanban_barcode">
                                <field name="name" />
                                <field name="action_window_id" />
                                <field name="key_shortcut" />
                                <field name="key_char_shortcut" />
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_details">
                                            <button
                                                name="open_action"
                                                type="object"
                                                class="pull-right btn"
                                                style="width:100%"
                                                t-att-aria-keyshortcuts="key_char_shortcut"
                                                t-att-accesskey="record.key_char_shortcut.raw_value"
                                            >
                                                <div class="row">
                                                    <div class="col">
                                                        <strong>
                                                            <span>
                                                                <field name="name" />
                                                            </span>
                                                        </strong>
                                                    </div>
                                                </div>
                                            </button>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </div>
                    <div invisible="context.get('display_menu', False)">
                        <div name="info" class="text-center h3">
                            <div
                                class="alert alert-success"
                                role="status"
                                attrs="{'invisible': [('message_type', '!=', 'success')]}"
                            >
                                <field name="message" />
                            </div>
                            <div
                                class="alert alert-info"
                                role="status"
                                attrs="{'invisible': [('message_type', '!=', 'info')]}"
                            >
                                <field name="message" />
                            </div>
                            <div
                                class="alert alert-danger"
                                role="status"
                                attrs="{'invisible': [('message_type', '!=', 'more_match')]}"
                            >
                                <field name="message" />
                            </div>
                            <div
                                class="alert alert-danger"
                                role="status"
                                attrs="{'invisible': [('message_type', '!=', 'not_found')]}"
                            >
                                <field name="message" />
                            </div>
                        </div>
                        <field name="message_type" invisible="1" />
                        <field name="barcode" invisible="1" force_save="1" />
                        <field name="step" invisible="1" force_save="1" />
                        <field name="is_manual_qty" invisible="1" />
                        <field name="is_manual_confirm" invisible="1" />
                        <field name="product_tracking" invisible="1" force_save="1" />
                        <field name="guided_product_id" invisible="1" force_save="1" />
                        <field name="guided_location_id" invisible="1" force_save="1" />
                        <field
                            name="guided_location_dest_id"
                            invisible="1"
                            force_save="1"
                        />
                        <field name="guided_lot_id" invisible="1" force_save="1" />
                        <field name="visible_force_done" invisible="1" force_save="1" />
                        <field name="res_model_id" invisible="1" />
                        <field name="res_id" invisible="1" />
                        <field name="option_group_id" invisible="1" force_save="1" />
                        <field name="confirmed_moves" invisible="1" force_save="1" />
                        <field name="qty_available" invisible="1" />
                        <field name="owner_id" invisible="1" force_save="1" />
                        <field
                            name="_barcode_scanned"
                            widget="barcode_handler"
                            invisible="1"
                        />
                        <group name="scan_fields" class="bg-light">
                            <group name="location">
                                <div class="mt4">
                                    <span
                                        class="fa fa-map-marker fa-2x text-center"
                                        style="width:15%"
                                    />
                                    <field
                                        name="location_id"
                                        options="{'no_create': True}"
                                        attrs="{'readonly': [('manual_entry', '=', False)]}"
                                        force_save="1"
                                        style="width:85%"
                                        class="h5"
                                    />
                                </div>
                            </group>
                            <group
                                name="quant_package"
                                groups="stock.group_tracking_lot"
                            >
                                <div class="mt4">
                                    <span
                                        class="fa fa-inbox fa-2x text-center"
                                        style="width:15%"
                                    />
                                    <field
                                        name="package_id"
                                        options="{'no_create': True}"
                                        attrs="{'readonly': [('manual_entry', '=', False)]}"
                                        force_save="1"
                                        style="width:40%"
                                        class="h5"
                                    />
                                    ->
                                    <field
                                        name="result_package_id"
                                        options="{'no_create': True}"
                                        attrs="{'readonly': [('manual_entry', '=', False)]}"
                                        force_save="1"
                                        style="width:40%"
                                        class="h5"
                                    />
                                </div>
                            </group>
                            <group>
                                <div>
                                    <span
                                        class="fa fa-th-list fa-2x text-center"
                                        style="width:15%"
                                    />
                                    <field
                                        name="product_id"
                                        options="{'no_create': True}"
                                        attrs="{'readonly': [('manual_entry', '=', False)]}"
                                        force_save="1"
                                        style="width:85%"
                                        class="h5"
                                    />
                                </div>
                            </group>
                            <group
                                groups="stock.group_production_lot"
                                attrs="{'invisible': [('product_tracking', 'in', [False, 'none'])]}"
                            >
                                <div>
                                    <span
                                        class="fa fa-tags fa-2x text-center"
                                        style="width:15%"
                                    />
                                    <field
                                        name="lot_id"
                                        options="{'no_create': True}"
                                        domain="[('product_id', '=', product_id)]"
                                        context="{'default_product_id': product_id}"
                                        attrs="{'readonly': [('manual_entry', '=', False)]}"
                                        force_save="1"
                                        style="width:60%"
                                        class="h5"
                                    />
                                    <button
                                        class="btn btn-warning"
                                        name="action_clean_lot"
                                        type="object"
                                        icon="fa-recycle fa-1x"
                                        attrs="{'invisible': [('lot_id', '=', False)]}"
                                    />
                                    <button
                                        class="btn btn-secondary ml-2"
                                        type="action"
                                        name="%(action_stock_barcodes_new_lot)d"
                                        icon="fa-plus fa-1x"
                                        context="{'default_product_id': product_id}"
                                    />
                                </div>
                            </group>
                            <group
                                name="product"
                                attrs="{'invisible': [('manual_entry', '=', False), ('is_manual_qty', '=', False)]}"
                            >
                                <div class="mt8 text-center">
                                    <field
                                        name="product_qty"
                                        attrs="{'readonly': [('manual_entry', '=', False), ('is_manual_qty', '=', False)]}"
                                        force_save="1"
                                        widget="numeric_step"
                                        options="{'auto_select': True}"
                                        style="width:60%"
                                    />
                                </div>
                            </group>
                            <group
                                name="package"
                                groups="stock.group_tracking_lot"
                                invisible="1"
                            >
                                <field
                                    name="package_id"
                                    options="{'no_create': True}"
                                    attrs="{'readonly': [('manual_entry', '=', False)]}"
                                    force_save="1"
                                />
                            </group>
                            <group
                                name="packaging"
                                groups="product.group_stock_packaging"
                            >
                                <div>
                                    <span
                                        class="fa fa-dropbox fa-2x text-center"
                                        style="width:15%"
                                    />
                                    <field
                                        name="packaging_id"
                                        options="{'no_create': True}"
                                        domain="[('product_id', '=', product_id)]"
                                        attrs="{'readonly': [('manual_entry', '=', False)]}"
                                        force_save="1"
                                        style="width:85%"
                                        class="h5"
                                    />
                                </div>
                            </group>
                            <group
                                name="packaging_qty"
                                attrs="{'invisible': ['|', ('packaging_id', '=', False), '&amp;', ('manual_entry', '=', False), ('is_manual_qty', '=', False)]}"
                            >
                                <div class="mt8 text-center">
                                    <field
                                        name="packaging_qty"
                                        attrs="{'readonly': [('manual_entry', '=', False), ('is_manual_qty', '=', False)]}"
                                        force_save="1"
                                        widget="numeric_step"
                                        options="{'auto_select': True}"
                                        style="width:60%"
                                    />
                                </div>
                            </group>
                            <group
                                name="scan_log"
                                string="Current product scanning log"
                                attrs="{'invisible': [('scan_log_ids', '=', [])]}"
                            >
                                <group>
                                    <button
                                        name="action_undo_last_scan"
                                        type="object"
                                        string="Remove last yours"
                                        icon="fa-trash"
                                    />
                                </group>
                                <field
                                    name="scan_log_ids"
                                    options="{'no_open': True}"
                                    nolabel="1"
                                    mode="tree,kanban"
                                >
                                    <tree string="Current product scanning log">
                                        <field name="create_date" />
                                        <field name="create_uid" />
                                        <field name="name" />
                                        <field name="product_id" />
                                        <field name="product_qty" />
                                        <field name="lot_id" />
                                    </tree>
                                    <kanban class="o_kanban_mobile">
                                        <field name="create_date" />
                                        <field name="create_uid" />
                                        <field name="product_qty" />
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div t-attf-class="oe_kanban_card">
                                                    <div class="row">
                                                        <div class="col-8">
                                                            <strong>
                                                                <span>
                                                                    <t
                                                                        t-esc="record.create_date.value"
                                                                    />
                                                                </span>
                                                                <span>
                                                                    <t
                                                                        t-esc="record.create_uid.value"
                                                                    />
                                                                </span>
                                                            </strong>
                                                        </div>
                                                        <div class="col-4">
                                                            <strong>
                                                                <span
                                                                    class="pull-right text-right"
                                                                >
                                                                    <t
                                                                        t-esc="record.product_qty.value"
                                                                    />
                                                                </span>
                                                            </strong>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </group>
                        </group>
                    </div>
                </sheet>
                <div class="oe_sticky_bottom d-flex">
                    <field name="manual_entry" widget="FieldBarcodeBooleanToggle" />
                    <field name="display_menu" invisible="1" />
                    <label for="manual_entry">
                        Edit
                    </label>
                    <button
                        name="action_manual_entry"
                        type="object"
                        string="Manual entry"
                        icon="fa-plus"
                        attrs="{'invisible': [('manual_entry', '=', False)]}"
                        class="btn-primary"
                    />
                    <button
                        name="action_clean_values"
                        type="object"
                        class="btn-warning ml-auto oe_kanban_action_button"
                        invisible="context.get('display_menu', False)"
                    >
                        <i class="fa fa-recycle" />
                    </button>
                    <button
                        name="action_confirm"
                        type="object"
                        class="btn-success ml-auto oe_kanban_action_button"
                        attrs="{'invisible': ['|', '|', ('is_manual_confirm', '=', False), ('display_menu', '=', True), ('visible_force_done', '=', True)]}"
                    >
                        <i class="fa fa-check" />
                    </button>
                    <button
                        name="action_force_done"
                        type="object"
                        icon="fa-check"
                        attrs="{'invisible': [('visible_force_done', '=', False)]}"
                        class="btn-danger ml-auto oe_kanban_action_button"
                    />
                    <button
                        name="open_actions"
                        type="object"
                        string="Actions"
                        class="btn-primary ml-auto oe_kanban_action_button"
                        invisible="context.get('display_menu', False)"
                    />
                    <button
                        name="action_back"
                        type="object"
                        string="Back"
                        class="btn-secondary ml-auto oe_kanban_action_button"
                        icon="fa-backward"
                        invisible="not context.get('display_menu', False)"
                    />
                </div>
            </form>
        </field>
    </record>
    <!--
     Open wizard in current target option to avoid that the wizard is
     closed after any button click,
    -->
    <record id="action_stock_barcodes_read" model="ir.actions.act_window">
        <field name="res_model">wiz.stock.barcodes.read</field>
        <field name="name">Barcodes Read</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="view_stock_barcodes_read_form" />
        <field name="target">current</field>
    </record>
    <record id="view_stock_barcodes_read_form_manual_qty" model="ir.ui.view">
        <field name="name">stock.barcodes.read.form.manual_qty</field>
        <field name="model">wiz.stock.barcodes.read</field>
        <field name="priority" eval="999" />
        <field name="arch" type="xml">
            <form string="Barcodes manual quantities">
                <sheet>
                    <field name="packaging_id" invisible="1" />
                    <field
                        name="packaging_qty"
                        attrs="{'invisible': [('packaging_id', '=', False)]}"
                        force_save="1"
                        widget="numeric_step"
                        options="{'auto_select': True}"
                    />
                    <field
                        name="product_qty"
                        force_save="1"
                        widget="numeric_step"
                        options="{'auto_select': True}"
                    />
                    <button
                        name="action_reopen_wizard"
                        type="object"
                        class="btn-success"
                    >
                        <i class="fa fa-check" />
                    </button>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
