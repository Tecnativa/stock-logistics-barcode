<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_barcodes_read_form" model="ir.ui.view">
        <field name="name">stock.barcodes.read.form</field>
        <field name="model">wiz.stock.barcodes.read</field>
        <field name="arch" type="xml">
            <form string="Lot">
                <sheet>
                    <div>
                        <label for="force_input_qty">
                            Input qty required
                        </label>
                        <field name="force_input_qty" widget="boolean_toggle"/>
                        <field name="message_info"/>
                    </div>
                    <field name="barcode" invisible="1" force_save="1"/>
                    <field name="res_model_id" invisible="1"/>
                    <field name="res_id" invisible="1"/>
                    <field name="_barcode_scanned" widget="barcode_handler" invisible="1"/>
                    <group>
                        <field name="location_id" options="{'no_create': True}"/>
                        <field name="product_id" options="{'no_create': True}"/>
                        <field name="packaging_id" options="{'no_create': True}"/>
                        <field name="lot_id" options="{'no_create': True}"
                               domain="[('product_id', '=', product_id)]"
                               context="{'default_product_id': product_id}"/>
                        <button string="Clean lot" name="action_clean_lot" type="object" />
                        <button string="New lot" type="action"
                                name="%(action_stock_barcodes_new_lot)d" icon="fa-plus"/>
                        <field name="packaging_qty"/>
                        <field name="product_qty" type="number"/>
                    </group>
                    <group/>
                    <group>
                        <button name="action_manual_entry" type="object" string="Manual entry" icon="fa-plus"/>
                        <button name="action_remove_last_scan" type="object" string="Remove last scan" icon="fa-trash"/>
                    </group>
                    <field name="scan_log_ids">
                        <tree string="Scan log">
                            <field name="create_date"/>
                            <field name="create_uid"/>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="product_qty"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_stock_barcodes_read">
        <field name="res_model">wiz.stock.barcodes.read</field>
        <field name="name">Barcodes Read</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="view_stock_barcodes_read_form"/>
        <field name="target">current</field>
    </record>

</odoo>
